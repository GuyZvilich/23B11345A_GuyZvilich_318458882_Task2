<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/gray_300">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/home_LBL_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Shit\nHappens!"
        android:textAlignment="center"
        android:textColor="@color/brown_700"
        android:textSize="80sp"
        android:textStyle="bold"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/home_BTN_play"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="play"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:backgroundTint="@color/brown_700"
        android:layout_below="@+id/home_LBL_title"
        android:layout_marginTop="50dp"
        />

<LinearLayout
    android:id="@+id/difficuly"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/home_BTN_play"
    >
    <com.google.android.material.button.MaterialButton
        android:id="@+id/home_BTN_easy"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:text="easy"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:backgroundTint="@color/brown_700"
        android:layout_marginTop="20dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/home_BTN_hard"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="hard"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:backgroundTint="@color/brown_700"
        android:layout_marginTop="20dp"
        />
</LinearLayout>

    <LinearLayout
        android:id="@+id/mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/difficuly"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/home_BTN_buttons"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:text="buttons"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:backgroundTint="@color/brown_700"
            android:layout_marginTop="20dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/home_BTN_sensors"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="sensors"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:backgroundTint="@color/brown_700"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/home_BTN_records"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="records"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:backgroundTint="@color/brown_700"
        android:layout_below="@+id/mode"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>